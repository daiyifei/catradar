// 文档教程: https://uniapp.dcloud.net.cn/uniCloud/schema
{
	"bsonType": "object",
	"required": [],
	"permission": {
		"read": true,
		"create": true,
		"update": "doc.uid == auth.uid",
		"delete": "doc.uid == auth.uid"
	},
	"properties": {
		"_id": {
			"description": "存储文档 ID（文章 ID），系统自动生成"
		},
		"uid": {
			"bsonType": "string",
			"description": "发送者ID，参考`uni-id-users` 表",
			"forceDefaultValue": {
				"$env": "uid"
			},
			"foreignKey": "uni-id-users._id"
		},
		"touids": {
			"bsonType": "array",
			"description": "接收者ID，参考`uni-id-users` 表",
			"foreignKey": "uni-id-users._id"
		},
		"base_id": {
			"bsonType": "string",
			"description": "猫区ID，参考`bases` 表",
			"foreignKey": "bases._id"
		},
		"content": {
			"bsonType": "string",
			"description": "消息内容",
			"trim": "both"
		},
		"is_read": {
			"bsonType": "bool",
			"description": "是否已读",
			"forceDefaultValue": false
		},
		"is_reply": {
			"bsonType": "bool",
			"description": "是否已回",
			"forceDefaultValue": false
		},
		"create_date": {
			"bsonType": "timestamp",
			"description": "消息发送时间",
			"forceDefaultValue": {
				"$env": "now"
			}
		}
	}
}
