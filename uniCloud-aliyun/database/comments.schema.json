// 文档教程: https://uniapp.dcloud.net.cn/uniCloud/schema
{
	"bsonType": "object",
	"required": [],
	"permission": {
		"read": true,
		"create": true,
		"update": "doc.uid == auth.uid",
		"delete": "doc.uid == auth.uid"
	},
	"properties": {
		"_id": {
			"description": "存储文档 ID（文章 ID），系统自动生成"
		},
		"timeline_id": {
			"bsonType": "string",
			"description": "文章ID，timeline 表中的`_id`字段",
			"foreignKey": "timeline._id"
		},
		"user_id": {
			"bsonType": "string",
			"description": "评论者ID，参考`uni-id-users` 表",
			"forceDefaultValue": {
				"$env": "uid"
			},
			"foreignKey": "uni-id-users._id"
		},
		"content": {
			"bsonType": "string",
			"description": "评论内容",
			"title": "评论内容",
			"trim": "both"
		},
		"comment_type": {
			"bsonType": "int",
			"description": "回复类型：0 点赞 1 评论"
		},
		"reply_user_id": {
			"bsonType": "string",
			"description": "被回复的评论用户ID",
			"foreignKey": "uni-id-users._id"
		},
		"create_date": {
			"bsonType": "timestamp",
			"description": "评论发表时间",
			"forceDefaultValue": {
				"$env": "now"
			}
		}
	}
}
