{
	"pages": [
		//pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
		{
			"path": "pages/radar/index",
			"style": {
				"disableScroll": true
			}
		}, {
			"path": "pages/list/index",
			"style": {
				"navigationBarTitleText": "档案",
				"enablePullDownRefresh": true
			}
		}, {
			"path": "pages/list/detail",
			"style": {
				"navigationBarBackgroundColor": "#1296db",
				"app-plus": {
					"titleNView":{
						"type":"transparent",
						"padding": "10px"
					}
				}
			}
		}, {
			"path": "pages/list/edit",
			"style": {}
		}, {
			"path": "pages/mine/index",
			"style": {
				"disableScroll": true
			}
		}, {
			"path": "pages/stat/index",
			"style": {
				"disableScroll": true
			}
		}
	],
	"tabBar": {
		"color": "#cccccc",
		"selectedColor": "#1296db",
		"borderStyle": "white",
		"backgroundColor": "#ffffff",
		"list": [{
			"pagePath": "pages/radar/index",
			"iconPath": "static/tabbar/icon_radar.png",
			"selectedIconPath": "static/tabbar/icon_radar_hl.png",
			"text": "雷达"
		}, {
			"pagePath": "pages/list/index",
			"iconPath": "static/tabbar/icon_cats.png",
			"selectedIconPath": "static/tabbar/icon_cats_hl.png",
			"text": "档案"
		}, {
			"pagePath": "pages/stat/index",
			"iconPath": "static/tabbar/icon_stat.png",
			"selectedIconPath": "static/tabbar/icon_stat_hl.png",
			"text": "统计"
		}, {
			"pagePath": "pages/mine/index",
			"iconPath": "static/tabbar/icon_mine.png",
			"selectedIconPath": "static/tabbar/icon_mine_hl.png",
			"text": "我的"
		}]
	},
	"globalStyle": {
		"navigationBarTitleText":"猫雷达",
		"navigationBarBackgroundColor": "#0081FF",
		"mp-alipay": {
			/* 支付宝小程序特有相关 */
			"transparentTitle": "always",
			"allowsBounceVertical": "NO"
		}
	},
	"usingComponts": true,
	"easycom": {
			// 下载安装的方式需要前面的"@/"，npm安装的方式无需"@/"
			"^u-(.*)": "uview-ui/components/u-$1/u-$1.vue"
	}
}
